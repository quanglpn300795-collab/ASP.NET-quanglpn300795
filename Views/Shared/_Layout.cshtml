<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimAuction</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col bg-gray-50">
    <header class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-3">
                    <i class="fas fa-mobile-alt text-2xl text-blue-600"></i>
                    <div class="hidden sm:block">
                        <span class="text-xl font-bold text-gray-900">SimAuction</span>
                        <p class="text-xs text-gray-500">Đấu giá sim số đẹp</p>
                    </div>
                </a>
                
                <div class="flex items-center space-x-4">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>

    <main class="flex-grow">
        @RenderBody()
    </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>