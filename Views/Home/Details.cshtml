@model SimCard
@{
    ViewData["Title"] = $"Sim {Model.Number}";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Sim Details -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
                <div class="flex items-center justify-between mb-6">
                    <div class="flex items-center space-x-3">
                        <i class="fas fa-mobile-alt text-3xl text-blue-600"></i>
                        <div>
                            <h1 class="text-3xl font-bold text-gray-900">@Model.Number</h1>
                            <p class="text-gray-600">@Model.Category</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <span class="px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                            @Model.Network
                        </span>
                    </div>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-gray-900">@Model.BeautyScore</div>
                        <div class="text-sm text-gray-600">Độ đẹp</div>
                        <div class="flex justify-center mt-1">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="fas fa-star @(i <= Model.BeautyScore ? "text-yellow-400" : "text-gray-300")"></i>
                            }
                        </div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-gray-900">@Model.TotalBids</div>
                        <div class="text-sm text-gray-600">Lượt đấu</div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-green-600">@Model.CurrentPrice.ToString("N0")</div>
                        <div class="text-sm text-gray-600">Giá hiện tại (VND)</div>
                    </div>
                    <div class="text-center p-4 bg-gray-50 rounded-lg">
                        <div class="text-2xl font-bold text-orange-600" id="countdown" data-end-time="@Model.EndTime.ToString("yyyy-MM-ddTHH:mm:ss")">
                            Đang tính...
                        </div>
                        <div class="text-sm text-gray-600">Thời gian còn lại</div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Mô tả</h3>
                        <p class="text-gray-600">@Model.Description</p>
                    </div>
                }
            </div>

            <!-- Bid History -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Lịch sử đấu giá</h3>
                @if (Model.Bids.Any())
                {
                    <div class="space-y-3">
                        @foreach (var bid in Model.Bids.OrderByDescending(b => b.CreatedAt).Take(10))
                        {
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-user-circle text-gray-400"></i>
                                    <div>
                                        <div class="font-medium text-gray-900">@(bid.User.FullName ?? "Người dùng ẩn danh")</div>
                                        <div class="text-sm text-gray-500">@bid.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                </div>
                                <div class="text-lg font-bold text-green-600">
                                    @bid.Amount.ToString("N0") VND
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <i class="fas fa-gavel text-4xl text-gray-300 mb-4"></i>
                        <p class="text-gray-600">Chưa có lượt đấu giá nào</p>
                    </div>
                }
            </div>
        </div>

        <!-- Bidding Panel -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sticky top-4">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Đấu giá</h3>
                
                <div class="mb-4">
                    <div class="text-sm text-gray-600 mb-1">Giá khởi điểm</div>
                    <div class="text-xl font-bold text-gray-900">@Model.StartingPrice.ToString("N0") VND</div>
                </div>

                <div class="mb-4">
                    <div class="text-sm text-gray-600 mb-1">Giá hiện tại</div>
                    <div class="text-2xl font-bold text-green-600">@Model.CurrentPrice.ToString("N0") VND</div>
                </div>

                @if (Model.BuyNowPrice.HasValue)
                {
                    <div class="mb-6">
                        <div class="text-sm text-gray-600 mb-1">Giá mua ngay</div>
                        <div class="text-xl font-bold text-blue-600">@Model.BuyNowPrice.Value.ToString("N0") VND</div>
                    </div>
                }

                @if (Model.Status == SimStatus.Active)
                {
                    <form method="post" asp-controller="Bid" asp-action="PlaceBid" class="space-y-4">
                        <input type="hidden" name="SimCardId" value="@Model.Id" />
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Số tiền đấu giá</label>
                            <input type="number" name="Amount" min="@(Model.CurrentPrice + 50000)" step="50000" 
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" 
                                   placeholder="@((Model.CurrentPrice + 50000).ToString("N0"))" required />
                            <div class="text-xs text-gray-500 mt-1">Tối thiểu: @((Model.CurrentPrice + 50000).ToString("N0")) VND</div>
                        </div>
                        <button type="submit" class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
                            <i class="fas fa-gavel mr-2"></i>
                            Đấu giá ngay
                        </button>
                    </form>

                    @if (Model.BuyNowPrice.HasValue)
                    {
                        <form method="post" asp-controller="Bid" asp-action="BuyNow" class="mt-3">
                            <input type="hidden" name="SimCardId" value="@Model.Id" />
                            <button type="submit" class="w-full bg-green-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-green-700 transition-colors">
                                <i class="fas fa-shopping-cart mr-2"></i>
                                Mua ngay @Model.BuyNowPrice.Value.ToString("N0") VND
                            </button>
                        </form>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="text-red-600 font-semibold">Phiên đấu giá đã kết thúc</div>
                        @if (!string.IsNullOrEmpty(Model.WinnerId))
                        {
                            <div class="text-sm text-gray-600 mt-2">Người thắng: @Model.Winner?.FullName</div>
                        }
                    </div>
                }

                <div class="mt-6 pt-4 border-t border-gray-200">
                    <div class="text-xs text-gray-500">
                        <p>• Mỗi lần đấu tối thiểu tăng 50,000 VND</p>
                        <p>• Phí giao dịch: 2% giá trị sim</p>
                        <p>• Thanh toán trong vòng 24h</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateCountdown() {
            const element = document.getElementById('countdown');
            const endTime = new Date(element.getAttribute('data-end-time'));
            const now = new Date();
            const diff = endTime - now;

            if (diff <= 0) {
                element.textContent = 'Đã kết thúc';
                element.className = 'text-2xl font-bold text-red-600';
                return;
            }

            const days = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            if (days > 0) {
                element.textContent = `${days}d ${hours}h ${minutes}m`;
            } else if (hours > 0) {
                element.textContent = `${hours}h ${minutes}m ${seconds}s`;
            } else {
                element.textContent = `${minutes}m ${seconds}s`;
            }
        }

        updateCountdown();
        setInterval(updateCountdown, 1000);
    </script>
}