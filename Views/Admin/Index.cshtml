@{
    ViewData["Title"] = "Quản trị hệ thống";
}

<div class="min-h-screen bg-gray-100">
    <!-- Header -->
    <div class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Quản trị hệ thống</h1>
                    <p class="text-gray-600">Tổng quan và thống kê</p>
                </div>
                <div class="flex space-x-3">
                    <a asp-action="CreateSim" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                        <i class="fas fa-plus mr-2"></i>Thêm sim
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Navigation -->
        <div class="mb-8">
            <nav class="flex space-x-8">
                <a asp-action="Index" class="text-blue-600 border-b-2 border-blue-600 pb-2 font-medium">
                    <i class="fas fa-chart-bar mr-2"></i>Tổng quan
                </a>
                <a asp-action="Users" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-users mr-2"></i>Người dùng
                </a>
                <a asp-action="Sims" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-mobile-alt mr-2"></i>Sim số
                </a>
                <a asp-action="Auctions" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-gavel mr-2"></i>Đấu giá
                </a>
                <a asp-action="Reports" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-file-alt mr-2"></i>Báo cáo
                </a>
            </nav>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-users text-blue-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Tổng người dùng</p>
                        <p class="text-2xl font-semibold text-gray-900">@ViewBag.Stats.TotalUsers</p>
                        <p class="text-sm text-green-600">+@ViewBag.Stats.NewUsersToday hôm nay</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-mobile-alt text-green-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Tổng sim</p>
                        <p class="text-2xl font-semibold text-gray-900">@ViewBag.Stats.TotalSims</p>
                        <p class="text-sm text-blue-600">@ViewBag.Stats.ActiveAuctions đang đấu giá</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-gavel text-yellow-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Tổng lượt đấu</p>
                        <p class="text-2xl font-semibold text-gray-900">@ViewBag.Stats.TotalBids</p>
                        <p class="text-sm text-gray-500">Tất cả thời gian</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-dollar-sign text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Tổng doanh thu</p>
                        <p class="text-2xl font-semibold text-gray-900">@ViewBag.Stats.TotalRevenue.ToString("N0")</p>
                        <p class="text-sm text-green-600">+@ViewBag.Stats.RevenueToday.ToString("N0") hôm nay</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-white rounded-lg shadow">
                <div class="p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Thao tác nhanh</h3>
                    <div class="space-y-3">
                        <a asp-action="CreateSim" class="flex items-center p-3 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">
                            <i class="fas fa-plus-circle text-blue-600 mr-3"></i>
                            <span class="text-blue-700 font-medium">Thêm sim mới</span>
                        </a>
                        <a asp-action="Users" class="flex items-center p-3 bg-green-50 rounded-lg hover:bg-green-100 transition-colors">
                            <i class="fas fa-user-cog text-green-600 mr-3"></i>
                            <span class="text-green-700 font-medium">Quản lý người dùng</span>
                        </a>
                        <a asp-action="Auctions" class="flex items-center p-3 bg-yellow-50 rounded-lg hover:bg-yellow-100 transition-colors">
                            <i class="fas fa-gavel text-yellow-600 mr-3"></i>
                            <span class="text-yellow-700 font-medium">Quản lý đấu giá</span>
                        </a>
                        <a asp-action="Reports" class="flex items-center p-3 bg-purple-50 rounded-lg hover:bg-purple-100 transition-colors">
                            <i class="fas fa-chart-line text-purple-600 mr-3"></i>
                            <span class="text-purple-700 font-medium">Xem báo cáo</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow">
                <div class="p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Hoạt động gần đây</h3>
                    <div class="space-y-3">
                        <div class="flex items-center text-sm">
                            <div class="w-2 h-2 bg-green-400 rounded-full mr-3"></div>
                            <span class="text-gray-600">Hệ thống hoạt động bình thường</span>
                        </div>
                        <div class="flex items-center text-sm">
                            <div class="w-2 h-2 bg-blue-400 rounded-full mr-3"></div>
                            <span class="text-gray-600">@ViewBag.Stats.NewUsersToday người dùng mới hôm nay</span>
                        </div>
                        <div class="flex items-center text-sm">
                            <div class="w-2 h-2 bg-yellow-400 rounded-full mr-3"></div>
                            <span class="text-gray-600">@ViewBag.Stats.ActiveAuctions phiên đấu giá đang diễn ra</span>
                        </div>
                        <div class="flex items-center text-sm">
                            <div class="w-2 h-2 bg-purple-400 rounded-full mr-3"></div>
                            <span class="text-gray-600">Doanh thu hôm nay: @ViewBag.Stats.RevenueToday.ToString("N0") VND</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>