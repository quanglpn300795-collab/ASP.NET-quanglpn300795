@model List<SimCard>
@{
    ViewData["Title"] = "Quản lý sim số";
}

<div class="min-h-screen bg-gray-100">
    <div class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Quản lý sim số</h1>
                    <p class="text-gray-600">Danh sách và quản lý sim số đẹp</p>
                </div>
                <a asp-action="CreateSim" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    <i class="fas fa-plus mr-2"></i>Thêm sim mới
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Navigation -->
        <div class="mb-8">
            <nav class="flex space-x-8">
                <a asp-action="Index" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-chart-bar mr-2"></i>Tổng quan
                </a>
                <a asp-action="Users" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-users mr-2"></i>Người dùng
                </a>
                <a asp-action="Sims" class="text-blue-600 border-b-2 border-blue-600 pb-2 font-medium">
                    <i class="fas fa-mobile-alt mr-2"></i>Sim số
                </a>
                <a asp-action="Auctions" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-gavel mr-2"></i>Đấu giá
                </a>
                <a asp-action="Reports" class="text-gray-500 hover:text-gray-700 pb-2">
                    <i class="fas fa-file-alt mr-2"></i>Báo cáo
                </a>
            </nav>
        </div>

        <!-- Sims Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var sim in Model)
            {
                <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow">
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-4">
                            <div class="flex items-center space-x-2">
                                <i class="fas fa-mobile-alt text-blue-600"></i>
                                <h3 class="text-lg font-bold text-gray-900">@sim.Number</h3>
                            </div>
                            <div class="flex space-x-1">
                                <span class="px-2 py-1 text-xs rounded-full @(sim.Network == "Viettel" ? "bg-green-100 text-green-800" : sim.Network == "Vinaphone" ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                    @sim.Network
                                </span>
                                <span class="px-2 py-1 text-xs rounded-full @(sim.Status == SimStatus.Active ? "bg-green-100 text-green-800" : sim.Status == SimStatus.Sold ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-800")">
                                    @(sim.Status == SimStatus.Active ? "Đang đấu" : sim.Status == SimStatus.Sold ? "Đã bán" : "Kết thúc")
                                </span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <p class="text-sm text-gray-600 mb-1">@sim.Category</p>
                            <div class="flex items-center space-x-1">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= sim.BeautyScore ? "text-yellow-400" : "text-gray-300")"></i>
                                }
                                <span class="text-sm text-gray-600 ml-1">(@sim.BeautyScore/5)</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-sm text-gray-600">Giá khởi điểm:</span>
                                <span class="font-medium">@sim.StartingPrice.ToString("N0") VND</span>
                            </div>
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-sm text-gray-600">Giá hiện tại:</span>
                                <span class="font-bold text-green-600">@sim.CurrentPrice.ToString("N0") VND</span>
                            </div>
                            @if (sim.BuyNowPrice.HasValue)
                            {
                                <div class="flex justify-between items-center">
                                    <span class="text-sm text-gray-600">Mua ngay:</span>
                                    <span class="font-medium text-blue-600">@sim.BuyNowPrice.Value.ToString("N0") VND</span>
                                </div>
                            }
                        </div>

                        <div class="mb-4 text-sm text-gray-600">
                            <div class="flex justify-between">
                                <span>Lượt đấu:</span>
                                <span>@sim.TotalBids</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Kết thúc:</span>
                                <span>@sim.EndTime.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(sim.WinnerId))
                            {
                                <div class="flex justify-between">
                                    <span>Người thắng:</span>
                                    <span>@(sim.Winner?.FullName ?? "N/A")</span>
                                </div>
                            }
                        </div>

                        <div class="flex space-x-2">
                            <a asp-action="EditSim" asp-route-id="@sim.Id" 
                               class="flex-1 text-center bg-blue-600 text-white py-2 px-3 rounded text-sm hover:bg-blue-700">
                                <i class="fas fa-edit mr-1"></i>Sửa
                            </a>
                            <button onclick="deleteSim('@sim.Id', '@sim.Number')" 
                                    class="flex-1 bg-red-600 text-white py-2 px-3 rounded text-sm hover:bg-red-700">
                                <i class="fas fa-trash mr-1"></i>Xóa
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <i class="fas fa-mobile-alt text-6xl text-gray-300 mb-4"></i>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có sim nào</h3>
                <p class="text-gray-600 mb-4">Bắt đầu bằng cách thêm sim số đẹp đầu tiên</p>
                <a asp-action="CreateSim" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">
                    <i class="fas fa-plus mr-2"></i>Thêm sim mới
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Xác nhận xóa</h3>
                <p class="text-sm text-gray-600 mb-4">
                    Bạn có chắc chắn muốn xóa sim <span id="deleteSimNumber" class="font-medium"></span>? 
                    Hành động này không thể hoàn tác.
                </p>
                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="hideDeleteModal()" 
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
                        Hủy
                    </button>
                    <form id="deleteForm" method="post" asp-action="DeleteSim" class="inline">
                        <input type="hidden" id="deleteSimId" name="id" />
                        <button type="submit" 
                                class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700">
                            Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteSim(simId, simNumber) {
            document.getElementById('deleteSimId').value = simId;
            document.getElementById('deleteSimNumber').textContent = simNumber;
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function hideDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
        }
    </script>
}