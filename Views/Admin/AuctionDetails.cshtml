@model SimCard
@{
    ViewData["Title"] = $"Chi tiết đấu giá - {Model.Number}";
}

<div class="min-h-screen bg-gray-100">
    <div class="bg-white shadow">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Chi tiết đấu giá - @Model.Number</h1>
                    <p class="text-gray-600">Thông tin chi tiết và lịch sử đấu giá</p>
                </div>
                <a asp-action="Auctions" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
                    <i class="fas fa-arrow-left mr-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Sim Info -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="text-center mb-6">
                        <i class="fas fa-mobile-alt text-4xl text-blue-600 mb-3"></i>
                        <h2 class="text-2xl font-bold text-gray-900">@Model.Number</h2>
                        <p class="text-gray-600">@Model.Category</p>
                    </div>

                    <div class="space-y-4">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Nhà mạng:</span>
                            <span class="font-medium">@Model.Network</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Độ đẹp:</span>
                            <div class="flex items-center">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= Model.BeautyScore ? "text-yellow-400" : "text-gray-300")"></i>
                                }
                                <span class="ml-1 text-sm">(@Model.BeautyScore/5)</span>
                            </div>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Trạng thái:</span>
                            <span class="px-2 py-1 text-xs rounded-full @(Model.Status == SimStatus.Active ? "bg-green-100 text-green-800" : Model.Status == SimStatus.Sold ? "bg-blue-100 text-blue-800" : "bg-gray-100 text-gray-800")">
                                @(Model.Status == SimStatus.Active ? "Đang đấu" : Model.Status == SimStatus.Sold ? "Đã bán" : "Kết thúc")
                            </span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Giá khởi điểm:</span>
                            <span class="font-medium">@Model.StartingPrice.ToString("N0") VND</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Giá hiện tại:</span>
                            <span class="font-bold text-green-600">@Model.CurrentPrice.ToString("N0") VND</span>
                        </div>
                        @if (Model.BuyNowPrice.HasValue)
                        {
                            <div class="flex justify-between">
                                <span class="text-gray-600">Giá mua ngay:</span>
                                <span class="font-medium text-blue-600">@Model.BuyNowPrice.Value.ToString("N0") VND</span>
                            </div>
                        }
                        <div class="flex justify-between">
                            <span class="text-gray-600">Tổng lượt đấu:</span>
                            <span class="font-medium">@Model.TotalBids</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Bắt đầu:</span>
                            <span class="text-sm">@Model.StartTime.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Kết thúc:</span>
                            <span class="text-sm">@Model.EndTime.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.WinnerId))
                        {
                            <div class="flex justify-between">
                                <span class="text-gray-600">Người thắng:</span>
                                <span class="font-medium text-blue-600">@Model.Winner?.FullName</span>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-6 pt-6 border-t border-gray-200">
                            <h3 class="font-medium text-gray-900 mb-2">Mô tả</h3>
                            <p class="text-gray-600 text-sm">@Model.Description</p>
                        </div>
                    }

                    <div class="mt-6 pt-6 border-t border-gray-200">
                        <div class="flex space-x-2">
                            <a asp-action="EditSim" asp-route-id="@Model.Id" 
                               class="flex-1 text-center bg-blue-600 text-white py-2 px-3 rounded text-sm hover:bg-blue-700">
                                <i class="fas fa-edit mr-1"></i>Chỉnh sửa
                            </a>
                            @if (Model.Status == SimStatus.Active)
                            {
                                <button onclick="endAuction('@Model.Id', '@Model.Number')" 
                                        class="flex-1 bg-red-600 text-white py-2 px-3 rounded text-sm hover:bg-red-700">
                                    <i class="fas fa-stop mr-1"></i>Kết thúc
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bid History -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow">
                    <div class="p-6 border-b border-gray-200">
                        <h3 class="text-lg font-medium text-gray-900">Lịch sử đấu giá (@Model.Bids.Count lượt)</h3>
                    </div>
                    <div class="p-6">
                        @if (Model.Bids.Any())
                        {
                            <div class="space-y-4">
                                @foreach (var bid in Model.Bids.Take(20))
                                {
                                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                                        <div class="flex items-center space-x-4">
                                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                                <i class="fas fa-user text-blue-600"></i>
                                            </div>
                                            <div>
                                                <div class="font-medium text-gray-900">@bid.User.FullName</div>
                                                <div class="text-sm text-gray-500">@bid.User.Email</div>
                                                <div class="text-xs text-gray-400">@bid.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</div>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <div class="text-lg font-bold text-green-600">
                                                @bid.Amount.ToString("N0") VND
                                            </div>
                                            @if (bid == Model.Bids.OrderByDescending(b => b.Amount).First())
                                            {
                                                <div class="text-xs text-yellow-600 font-medium">
                                                    <i class="fas fa-crown mr-1"></i>Cao nhất
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (Model.Bids.Count > 20)
                            {
                                <div class="text-center mt-6">
                                    <p class="text-gray-500 text-sm">Hiển thị 20 lượt đấu gần nhất. Tổng cộng @Model.Bids.Count lượt.</p>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-12">
                                <i class="fas fa-gavel text-4xl text-gray-300 mb-4"></i>
                                <h3 class="text-lg font-medium text-gray-900 mb-2">Chưa có lượt đấu giá nào</h3>
                                <p class="text-gray-600">Sim này chưa có ai đấu giá</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End Auction Modal -->
<div id="endAuctionModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4">Kết thúc đấu giá</h3>
                <p class="text-sm text-gray-600 mb-4">
                    Bạn có chắc chắn muốn kết thúc đấu giá sim <span id="endAuctionNumber" class="font-medium"></span>? 
                    Người đấu giá cao nhất sẽ thắng.
                </p>
                <div class="flex justify-end space-x-3">
                    <button type="button" onclick="hideEndAuctionModal()" 
                            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200">
                        Hủy
                    </button>
                    <form id="endAuctionForm" method="post" asp-action="EndAuction" class="inline">
                        <input type="hidden" id="endAuctionId" name="id" />
                        <button type="submit" 
                                class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700">
                            Kết thúc
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function endAuction(auctionId, simNumber) {
            document.getElementById('endAuctionId').value = auctionId;
            document.getElementById('endAuctionNumber').textContent = simNumber;
            document.getElementById('endAuctionModal').classList.remove('hidden');
        }

        function hideEndAuctionModal() {
            document.getElementById('endAuctionModal').classList.add('hidden');
        }
    </script>
}